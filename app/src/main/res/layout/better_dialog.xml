<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:chils="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/grgaref"
        android:layout_gravity="center"
        android:text="Odo detected : "
        android:textSize="40dp"
        android:textColor="@color/gray_dark"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <com.example.diary_oil_v3.custom_odometer.Odometer
            android:layout_marginTop="30dp"
            android:id="@+id/odometer"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            chils:np_centerColor="@android:color/black"
            chils:np_edgeColor="@android:color/white"
            chils:np_font="@string/lato_regular"
            chils:np_reading="12345"
            android:scaleX="1.4"
            android:scaleY="1.4"
            chils:np_slots="5"
            chils:np_textColor="@color/white"
            chils:np_textSize="35sp" />



    </LinearLayout>



</LinearLayout>